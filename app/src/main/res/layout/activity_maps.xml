<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapsActivity">

    <com.sothree.slidinguppanel.SlidingUpPanelLayout
        android:clickable="true"
        android:id="@+id/sliding_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        card_view:umanoPanelHeight="115dp"
        card_view:umanoShadowHeight="4dp"
        android:background="#F2EEE7">

        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_weight="1"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                android:clickable="true"
                android:id="@+id/cardview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                card_view:cardCornerRadius="15dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/menu_b"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:scaleType="fitCenter"
                        android:backgroundTint="#00000000"
                        android:paddingLeft="10dp"
                        android:layout_marginLeft="10dp"
                        card_view:srcCompat="@drawable/menu" />

                    <EditText
                        android:id="@+id/search"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:imeOptions="actionSearch"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/menu_b"
                        android:hint="검색어를 입력하세요."
                        android:text=""
                        android:textSize="20sp" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|bottom"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="131dp"
                android:clickable="true"
                android:src="@drawable/my_location"
                card_view:backgroundTint="#FFFFFFFF" />


        </fragment>

        <RelativeLayout
            android:id="@+id/card_up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:orientation="vertical">


        </RelativeLayout>


    </com.sothree.slidinguppanel.SlidingUpPanelLayout>



</FrameLayout>